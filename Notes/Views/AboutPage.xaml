<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.AboutPage"
             Title="Acerca de">
    <VerticalStackLayout Spacing="15" Margin="20">


        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Image Source="imagen1.jpg"
                   SemanticProperties.Description="Icono que representa a Josue"
                   HeightRequest="190" />
            
        </HorizontalStackLayout>

        <Label FontSize="24" FontAttributes="Bold" Text="Josue Mullo" VerticalOptions="Center" />

        <Label FontSize="16"
               Text="Soy Josue Mullo, estudiante apasionado por la tecnología y la programación. Me gusta aprender constantemente y desarrollar nuevas ideas con .NET MAUI y otras herramientas modernas."
               TextColor="Gray" />

        <Label Text="Esta aplicación está desarrollada con XAML y C# usando .NET MAUI."
               FontSize="14" />


        <Button Text="Aprende más..." Clicked="LearnMore_Clicked" />

    </VerticalStackLayout>
</ContentPage>
